@model EntityLayer.Concrete.Writer

@{
	ViewData["Title"] = "WriterAdd";
	Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<form class="form-group" method="post" enctype="multipart/form-data">
	<div class="col-12 grid-margin stretch-card">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">Yazar Bilgileri</h4>
				<br>
				<form class="forms-sample">
					@Html.HiddenFor(x=>x.WriterID , new {@class ="form-control"} )
					<div class="form-group">
						<label for="exampleInputName1">Yazar Adı Soyadı</label>
						<input type="text" class="form-control" id="exampleInputName1" placeholder="Name" asp-for="WriterName">
					</div>
					<div class="form-group">
						<label for="exampleInputEmail3">Mail Adresi</label>
						<input type="email" class="form-control" id="exampleInputEmail3" placeholder="Email" asp-for="WriterMail">
					</div>
					<div class="form-group">
						<label for="exampleInputPassword4">Şifre</label>
						<input type="password" class="form-control" id="exampleInputPassword4" placeholder="Password" asp-for="WriterPassword">
					</div>
					<div class="form-group">
						<label>Profil Resmi</label>
						<input type="file" name="WriterImage"/>
					</div>

					<div class="form-group">
						<label for="exampleTextarea1" asp-for="WriterAbout">Yazar Hakkında</label>
						<textarea class="form-control" id="exampleTextarea1" rows="4"></textarea>
					</div>
					<button type="submit" class="btn btn-gradient-primary mr-2">Kaydet</button>
					<button class="btn btn-light">İptal</button>
				</form>
			</div>
		</div>
	</div>

</form>

